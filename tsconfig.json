{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": [
      "dom",
      "esnext"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "noEmit": true,
    "target": "es6",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@navigation/*": [
        "src/navigation"
      ],
      "@components/*": [
        "src/components"
      ],
      "@types/*": [
        "src/types"
      ],
    }
  },
  "exclude": [
    "node_modules",
    ".vscode"
  ],
  "extends": "expo/tsconfig.base"
}